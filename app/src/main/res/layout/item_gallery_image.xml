<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thumb_square_bg"
    android:layout_margin="4dp"
    android:elevation="4dp"
    android:clipToOutline="true">

    <!-- 🖼️ Preserve Aspect Ratio Image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="Gallery Image"
        android:transitionName="sharedImageTransition"
        android:layout_gravity="center" />

    <!-- 🌙 Gradient overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_gradient_overlay"
        android:alpha="0.25" />

    <!-- 💬 Filter Info Tag -->
    <TextView
        android:id="@+id/filterTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="8dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:background="@drawable/filter_tag_bg"
        android:text="Filter: Cartoon"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone" />

</FrameLayout>